<div id='records'>
  <% if searching? %>
    <h2><%= t('shared.admin.search.results_for', :query => params[:search]) %></h2>
  <% end %>
  <% if @entry_attribute_types.any? %>
    <%= render :partial => 'list', :collection => @entry_attribute_types %>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_attribute_types_yet') %>
        </strong>
      <% else %>
        <%= t('shared.admin.search.no_results') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <li>
      <%= render :partial => "/shared/admin/search",
                 :locals => {:url => admin_entry_attribute_types_url} %>
    </li>
    <li>
      <%= link_to t('.create_new_attribute_type'), new_admin_entry_attribute_type_url,
                  :class => "add_icon" %>
    </li>
  </ul>
</div>

